<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".FlightTicket">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:padding="2dp">

        <LinearLayout

            android:gravity="center_horizontal"
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Radio Button Start -->
            <!--Radio Button End -->

            <LinearLayout

                android:background="@android:color/white"
                android:padding="5dp"
              android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:orientation="vertical"
                    android:background="@color/col6">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:textColor="#0A0A0A"
                        android:text="Booking Information"/>

                </LinearLayout>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Name of Traveller"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="18dp"
                    android:paddingLeft="30dp"
                    android:paddingStart="30dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:layout_marginTop="5dp"
                    android:hint="Name of the Traveller"
                    android:background="@drawable/edittextbgm"

                    android:id="@+id/traveler_name"/>

                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Date Of Birth"/>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffff">

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="18dp"
                            android:padding="10dp"
                            android:id="@+id/bday"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="32dp"
                        android:text="/"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffff"
                        >
                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="18dp"
                            android:padding="10dp"
                            android:id="@+id/bmonth"
                            />
                    </RelativeLayout>
                    <TextView
                        android:layout_margin="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:textSize="32dp"
                        android:text="/"/>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffff"
                        >

                        <Spinner
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:textSize="18dp"
                            android:padding="10dp"
                            android:id="@+id/byear"
                            />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="From"/>
                <!--<EditText-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="18dp"-->
                    <!--android:padding="10dp"-->
                    <!--android:hint="Enter the city or Code"-->
                    <!--android:background="@drawable/edittextbg"-->
                    <!--android:id="@+id/from"/>-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"

                    android:background="@drawable/edittextbgm">
                <Spinner
                    android:layout_width="match_parent"
                android:layout_height="wrap_content"

               android:textSize="18dp"
                android:padding="10dp"
                    android:id="@+id/city"
              />
                </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="To"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"

                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/edittextbgm">

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:padding="10dp"
                    android:id="@+id/city2"
                    />
                </RelativeLayout>
            <!--<EditText-->
                <!--android:layout_marginTop="5dp"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="18dp"-->
                <!--android:padding="10dp"-->
                <!--android:hint="Enter the city or Code"-->
                <!--android:background="@drawable/edittextbg"-->

                <!--android:id="@+id/to"/>-->
            <TextView
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:text="Date of Journey "/>

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffff">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/day"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="32dp"
                    android:text="/"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                    >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/month"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="32dp"
                    android:text="/"/>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ffff"
                   >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/year"
                        />
                </RelativeLayout>

            </LinearLayout>
                <TextView
                    android:textSize="18dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timing"/>

                <!--Radio Button Start-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    android:orientation="horizontal">

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@android:color/black"
                        android:id="@+id/radiogrp">

                                <RadioButton
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/oneway"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:onClick="rbclick"
                                    android:checked="false"
                                    android:layout_weight="1"
                                    android:text="Morning (4 am - 12 pm)"
                                    />

                                <RadioButton
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/roundtrip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:onClick="rbclick"
                                    android:checked="false"
                                    android:text="Evening (12 pm - 8 pm)"
                                   />


                                <RadioButton
                                    android:layout_marginLeft="5dp"
                                    android:id="@+id/business"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:onClick="rbclick"
                                    android:checked="false"
                                    android:text="Night (8 pm - 4 am)"
                                    />

                    </RadioGroup>


                </LinearLayout>


                <!--Radio Button End-->

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="vertical"
                android:background="@color/col6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#0A0A0A"
                    android:text="Contact Information"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textStyle="bold"
                    android:textColor="#616161"
                    android:text="Your ticket and flight info will be sent here"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"

                    android:text="Email ID"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:layout_marginTop="5dp"
                    android:hint="Email ID"

                    android:paddingLeft="30dp"
                    android:paddingStart="30dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/edittextbgm"
                    android:id="@+id/email"/>


                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"

                    android:text="Contact No"/>

                <EditText
                    android:id="@+id/contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Contact No"
                    android:inputType="number"

                    android:paddingLeft="30dp"
                    android:paddingStart="30dp"
                    android:paddingRight="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:background="@drawable/edittextbgm"
                    android:textSize="18dp" />

            </LinearLayout>



            <LinearLayout
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:background="@drawable/grad2"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="18dp"
                android:textColor="#ffff"
                android:text="Submit"
                android:textSize="18dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>

</LinearLayout>