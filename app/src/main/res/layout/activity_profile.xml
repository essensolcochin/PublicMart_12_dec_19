            <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@color/col10"
        android:orientation="horizontal"
        android:layout_height="150dp"
        android:paddingBottom="30dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            >
        <android.support.v7.widget.CardView

            android:layout_gravity="start"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"

            >

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/proicon"
                    android:textColor="@color/col10"
                    android:textSize="50dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

        </android.support.v7.widget.CardView>
        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"

            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:orientation="horizontal">


            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/col10"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/name"
               />



            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileid"
                android:textColor="@color/col10"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFC107"
                android:textSize="18dp"
                android:id="@+id/membership"
                />
        </LinearLayout>





    </LinearLayout>

        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"

                >

                <EditText

                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:id="@+id/name"
                    android:hint="Name"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"


                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />



            </android.support.design.widget.TextInputLayout>



            <TextView
                android:textColor="@color/col10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:text="Date of Birth "/>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_weight=".27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke">

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/day"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="32dp"
                    android:text="/"/>

                <RelativeLayout
                    android:layout_weight=".26"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke"
                    >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/Bmonth"
                        />
                </RelativeLayout>
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:textSize="32dp"
                    android:text="/"/>

                <RelativeLayout
                    android:layout_weight=".25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/stroke"
                    >

                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:padding="10dp"
                        android:id="@+id/Byear"
                        />
                </RelativeLayout>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:hint="Email"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textEmailAddress"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/address"
                    android:hint="Address"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact"
                    android:hint="Phone"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:textColor="@color/col11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textSize="18dp"
                android:text="Bank Details"/>


            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AcchName"
                    android:hint="A/C Holder Name"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/AccNo"
                    android:hint="A/C No."
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ifsc"
                    android:hint="IFSC code"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/BankName"
                    android:hint="Bank Name"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginTop="5dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Branch"
                    android:hint="Branch Name"
                    android:textColor="@color/col10"
                    android:background="@drawable/stroke"
                    android:inputType="textCapSentences"
                    android:imeOptions="actionNext"
                    />

            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:background="@drawable/grad2"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@android:color/white"
                android:textSize="18dp"
                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        </LinearLayout>
    </ScrollView>

