<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".HouseBoat">


    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewflipper"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!--Radio Button Start -->

                <!--Radio Button End -->

                <LinearLayout


                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:padding="10dp">
                    <!--<LinearLayout-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content">-->
                    <!--<ViewFlipper-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="220dp"-->
                    <!--android:id="@+id/viewflipper">-->

                    <!--</ViewFlipper>-->
                    <!--</LinearLayout>-->


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/col5"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Booking Information"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Guest Name"
                        android:textColor="@color/col7"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/traveler_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/stroke"
                        android:hint="Guest Name"
                        android:padding="10dp"
                        android:textSize="18dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#ffff" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Date of Journey "
                        android:textColor="@color/col7"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke">

                            <Spinner
                                android:id="@+id/day"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="18dp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:text="/"
                            android:textColor="@android:color/black"
                            android:textSize="32dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke">

                            <Spinner
                                android:id="@+id/month"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="18dp" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_margin="5dp"
                            android:text="/"
                            android:textColor="@android:color/black"
                            android:textSize="32dp" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/stroke">

                            <Spinner
                                android:id="@+id/year"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:textSize="18dp" />
                        </RelativeLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="No. of Guest"
                        android:textColor="@color/col7"
                        android:textSize="12dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stroke">

                        <Spinner
                            android:id="@+id/noofmembers"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:textSize="18dp" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Type of cruise"
                        android:textColor="@color/col7"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:padding="10dp">

                        <RadioGroup
                            android:id="@+id/radiogrp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:orientation="vertical">


                            <RadioButton
                                android:id="@+id/oneway"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:buttonTint="@android:color/black"
                                android:checked="false"
                                android:text="Day (11 am - 5 pm)"
                                android:textColor="@android:color/black" />

                            <RadioButton
                                android:id="@+id/roundtrip"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:buttonTint="@android:color/black"
                                android:checked="false"
                                android:text="Night (5 pm - 11 pm)"
                                android:textColor="@android:color/black" />


                            <RadioButton
                                android:id="@+id/business"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_marginLeft="5dp"
                                android:buttonTint="@android:color/black"
                                android:checked="false"
                                android:text="Fullday (11 am - 11 pm)"
                                android:textColor="@android:color/black" />

                        </RadioGroup>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@color/col5"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Information"
                            android:textColor="@android:color/white"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your will be contacted from the given details"
                            android:textColor="@android:color/white"
                            android:textSize="10dp"
                            android:textStyle="bold" />

                    </LinearLayout>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Email ID"
                            android:textColor="@color/col7"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:background="@drawable/stroke"
                            android:hint="Type Your Email ID"
                            android:padding="10dp"
                            android:textSize="18dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Contact No"
                            android:textColor="@color/col7"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"

                            android:background="@drawable/stroke"
                            android:hint="Type Your Contact No"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textSize="18dp" />



                    <LinearLayout
                        android:padding="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:gravity="center_horizontal">

                        <Button

                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/grad2"
                            android:paddingLeft="32dp"
                            android:paddingTop="18dp"
                            android:paddingRight="32dp"
                            android:paddingBottom="18dp"

                            android:text="Submit"
                            android:textColor="#ffff"
                            android:textSize="18dp" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</ScrollView>

