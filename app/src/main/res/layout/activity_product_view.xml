<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DBDADA"
    tools:context=".ProductView">

    <ScrollView
        android:layout_above="@+id/bottomframe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffff">


             <android.support.v4.view.ViewPager
              android:id="@+id/pager"
              android:layout_width="match_parent"
              android:layout_height="500dp">


              <android.support.design.widget.TabLayout

                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:tabBackground="@drawable/tab_selector"
                  app:tabGravity="center"
                  android:layout_gravity="bottom"
                  app:tabIndicatorHeight="0dp"/>


          </android.support.v4.view.ViewPager>


            </LinearLayout>

        <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="25dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:text="MIMOSA"
                android:textSize="20dp"
                android:textColor="#030303"
                android:textStyle="bold" />
            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/product_desc"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Woven Design Kanjeevaram Saree"
                android:textSize="15dp"
                android:textColor="#666666"
                />
            <LinearLayout
                android:padding="5dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textStyle="bold"
                    android:textColor="@color/col7"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500"
                    android:textColor="@color/col7"
                    android:textSize="20dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BV"
                    android:textStyle="bold"
                    android:textColor="@color/col10"
                    android:textSize="20dp" />


                <TextView
                    
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="@color/col10"
                    android:textSize="20dp" />
            </LinearLayout>
                
        </LinearLayout>
        
    </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout

                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/product_detail"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="PRODUCT DETAILS"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/detail_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                       android:text="@string/material"
                        android:textSize="13dp"
                        android:textColor="#666666"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="25dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/material"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="MATERIAL AND CARE"
                        android:textSize="20dp"
                        android:textColor="#030303"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/materialcare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/materialcare"
                        android:textSize="13dp"
                        android:textColor="#666666"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottomframe"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/edittextbgm">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:tint="@color/col5"
                    android:src="@drawable/love"

                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/col5"
                    android:layout_height="wrap_content"
                    android:text="WISHLIST"/>


            </LinearLayout>




        </LinearLayout>
        <Button
            android:textColor="@android:color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/col7"
            android:id="@+id/place_order"
            android:text="Place Order"/>


    </LinearLayout>

</RelativeLayout>


